extends ../layout
  
block content 
  if stores
  if neighborhoods
  nav.navbar
   .container-fluid
     // Brand and toggle get grouped for better mobile display
     .navbar-header
       button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
       a.navbar-brand(href='/') Vintage Denver
     // Collect the nav links, forms, and other content for toggling
     #bs-example-navbar-collapse-1.collapse.navbar-collapse
       ul.nav.navbar-nav
         li.active
           a(href='/stores')
             | Stores
             span.sr-only (current)
         li
           a(href='/stores/new') Add New Store
         li
           a(href='/neighborhoods') Neighborhoods
  h1 Edit Store
  .form
    include ../includes/errors.jade
    form(method='post' action='/stores/'+stores.id+'')
      fieldset.form-group
        input.form-control(type='text' name='name' value=stores.name)
      fieldset.form-group
        input.form-control(type='text' name='street1' value=stores.street1)
      fieldset.form-group
        select.form-control(name='neighborhood_id')
          option= neighborhoods.name
          option(value='1') Capitol Hill
          option(value='2') Baker
          option(value='3') Highlands
      fieldset.form-group
        input.form-control(type='text' name='city' value='Denver' disabled)
      fieldset.form-group
        input.form-control(type='text' name='state' value='CO' disabled)
      fieldset.form-group
        input.form-control(type='text' name='zip' value=stores.zip)
      fieldset.form-group
        input.form-control(type='text' name='bio' value=stores.bio)
      fieldset.form-group
        input.form-control(type='text' name='image' value=stores.image)
      fieldset.form-group
        input.form-control(type='url' name='site' value=stores.site)
      button.btn(type='submit') Submit
