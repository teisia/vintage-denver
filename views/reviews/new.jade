extends ../layout
  
block content 
  nav.navbar
   .container-fluid
     // Brand and toggle get grouped for better mobile display
     .navbar-header
       button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
       a.navbar-brand(href='/') Vintage Denver
     // Collect the nav links, forms, and other content for toggling
     #bs-example-navbar-collapse-1.collapse.navbar-collapse
       ul.nav.navbar-nav
         li.active
           a(href='/stores')
             | Stores
             span.sr-only (current)
         li
           a(href='/stores/new') Add New Store
         li
           a(href='/neighborhoods') Neighborhoods
  h1 New Review
  .form
    include ../includes/errors.jade
    form(method='post' action='/stores')
      fieldset.form-group
        input.form-control(type='text' name='name' placeholder='Name')
      fieldset.form-group
        input.form-control(type='text' name='date' placeholder='Date')
      fieldset.form-group
        input.form-control(type='text' name='review' placeholder='Review')
      fieldset.form-group.radioButtons
        label(for='rating') Rating:  
        input(type='radio' name='rating' value='1')
        input(type='radio' name='rating' value='2')
        input(type='radio' name='rating' value='3' checked)
        input(type='radio' name='rating' value='4')
        input(type='radio' name='rating' value='5')
      button.btn(type='submit') Submit
